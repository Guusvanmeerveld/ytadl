{
	"compilerOptions": {
		"target": "es5",
		"module": "ES2015",
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "dist",
		"baseUrl": "src",
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"]
}
